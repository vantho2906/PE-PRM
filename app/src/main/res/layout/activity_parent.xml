<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etParentField1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 1"
        android:padding="12dp"
        android:background="#E0E0E0" /> <!-- Light gray background -->

    <EditText
        android:id="@+id/etParentField2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 2"
        android:padding="12dp"
        android:background="#E0E0E0" />

    <EditText
        android:id="@+id/etParentField3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 3"
        android:padding="12dp"
        android:background="#E0E0E0" />

    <EditText
        android:id="@+id/etParentField4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 4"
        android:padding="12dp"
        android:background="#E0E0E0" />

    <Button
        android:id="@+id/btnAddParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ThÃªm Parent"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2196F3"
    android:textColor="#FFFFFF" /> <!-- White text -->

</LinearLayout>
