<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etChildField1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:padding="12dp"
        android:background="#E0E0E0" /> <!-- Light gray background -->

    <EditText
        android:id="@+id/etChildField2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:padding="12dp"
        android:background="#E0E0E0" />

    <EditText
        android:id="@+id/etChildField3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gender"
        android:padding="12dp"
        android:background="#E0E0E0" />

    <EditText
        android:id="@+id/etChildField4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:padding="12dp"
        android:background="#E0E0E0" />

    <EditText
        android:id="@+id/etChildField5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:padding="12dp"
        android:background="#E0E0E0" />

    <Spinner
        android:id="@+id/spinnerParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnAddUpdateChild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ThÃªm Student"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2196F3"
    android:textColor="#FFFFFF" /> <!-- White text -->

    <ListView
        android:id="@+id/lvChildren"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp" />
</LinearLayout>