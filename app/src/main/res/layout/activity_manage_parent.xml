<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etParentField1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 1" />

    <EditText
        android:id="@+id/etParentField2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 2" />

    <EditText
        android:id="@+id/etParentField3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 3" />

    <EditText
        android:id="@+id/etParentField4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 4" />

    <Button
        android:id="@+id/btnAddUpdateParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ThÃªm Parent" />

    <ListView
        android:id="@+id/lvParents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"/>
</LinearLayout>
